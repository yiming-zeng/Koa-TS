{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "removeComments": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ]
    },
    "compileOnSave": false,
    "include": [
        "./src/***/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}